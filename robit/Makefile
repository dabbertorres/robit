SRC := main.c

OBJ_DIR := obj
OBJS := $(addprefix $(OBJ_DIR)/,$(SRC:%.c=%.o))

LDFLAGS := -L$(OUT_DIR)

DEPS := -l:gpio.a

.PHONY: clean

$(OUT_DIR)/robit: $(OBJS)
	$(CC) -o $@ $^ $(LDFLAGS) $(DEPS)

$(OBJ_DIR)/%.o: %.c
	$(CC) -o $@ $(CFLAGS) -c $<

$(OBJS): | $(OBJ_DIR)

$(OBJ_DIR):
	mkdir $(OBJ_DIR)

clean:
	@rm -rf $(OBJ_DIR)

